<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical"
    android:weightSum="1"
    android:onClick="onButtonClick"
    android:background="@drawable/wallpaper_8547">


    

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="powered by GROUP X"
        android:id="@+id/textView"
        android:layout_gravity="right"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="@android:color/white" />

    <SearchView
        android:id="@+id/searchView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/way2blogging_searchbox1"
        android:iconifiedByDefault="false"
        android:padding="2dp"
        android:queryHint="Write something..."
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#e1e3e5"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="TreeTalk"
        android:id="@+id/textView2"
        android:layout_above="@+id/searchView1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="83dp"
        android:textColor="@android:color/white"
        android:textSize="@dimen/abc_alert_dialog_button_bar_height"
        android:textStyle="bold" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id"
        android:layout_above="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="45dp">
    </com.google.android.gms.ads.AdView>

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" />






</RelativeLayout>